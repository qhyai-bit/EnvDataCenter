<?xml version="1.0" encoding="UTF-8"?>

<!--
    配置文件主要包括2部分内容：
        a.各模块实现类全包名(实例化模块对象)
        b.各模块下的属性值(解决硬编码问题)
 -->
<environment>
    <gather class="com.briup.smart.env.client.GatherBackupImpl">
        <gatherFilePath>env-gather-impl/src/main/resources/data-file-simple</gatherFilePath>
        <gatherBackupFilePath>env-gather-impl/src/main/resources/gather-backup.txt</gatherBackupFilePath>
    </gather>

    <logger class="com.briup.smart.env.util.LogImpl"></logger>

    <backup class="com.briup.smart.env.util.BackupImpl"/>

    <client class="com.briup.smart.env.client.ClientImpl">
        <serverIP>127.0.0.1</serverIP>
        <serverPort>9999</serverPort>
    </client>

    <server class="com.briup.smart.env.server.ServerImpl">
        <isStop>false</isStop>
        <port>9999</port>
		<listenPort>8888</listenPort>
    </server>

    <dbStore class="com.briup.smart.env.server.DBStoreBackupImpl">
        <dbstoreBackupFilePath>env-gather-impl/src/main/resources/db-backup.txt</dbstoreBackupFilePath>
    </dbStore>

</environment>